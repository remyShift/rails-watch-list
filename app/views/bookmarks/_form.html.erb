<div class="flex flex-col gap-4 mt-4">
  <%= simple_form_for [list, bookmark] do |f| %>
    <%= f.input :comment, input_html: { class: "flex flex-col mb-4 rounded-md" } %>
    <%= f.association :movie, collection: Movie.all, input_html: { class: "flex flex-col mb-4 rounded-md" } %>
    <%= f.submit class: "bg-blue-500 text-white p-2 rounded-md mb-4 hover:bg-blue-700 hover:cursor-pointer" %>
    <%= link_to "Back", list_path(list), class: "bg-red-500 text-white p-2 rounded-md mb-4 hover:bg-red-700 hover:cursor-pointer" %>
  <% end %>
</div>